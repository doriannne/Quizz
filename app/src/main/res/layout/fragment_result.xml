<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/yourRes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/result"
            android:textSize="30sp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/aleo_bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginHorizontal="50dp"
            />

        <TextView
            android:id="@+id/correctAns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/correct_answears"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="60dp"
            android:fontFamily="@font/aleo_bold"
            android:textColor="@color/white"
            android:gravity="center"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            app:cardCornerRadius="30dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"

            >
            <Button
                android:id="@+id/first_cor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/aleo_bold"
                android:textStyle="bold"
                android:textSize="24sp"
                android:background="@drawable/gradient_back_btn"
                app:backgroundTint="@null"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            app:cardCornerRadius="30dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginBottom="20dp"

            >
            <Button
                android:id="@+id/second_cor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/aleo_bold"
                android:textStyle="bold"
                android:textSize="24sp"
                android:background="@drawable/gradient_back_btn"
                app:backgroundTint="@null"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            app:cardCornerRadius="30dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginBottom="20dp"

            >
            <Button
                android:id="@+id/third_cor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/aleo_bold"
                android:textStyle="bold"
                android:textSize="24sp"
                android:background="@drawable/gradient_back_btn"
                app:backgroundTint="@null"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            app:cardCornerRadius="30dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginBottom="20dp"

            >
            <Button
                android:id="@+id/fourth_cor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/aleo_bold"
                android:textStyle="bold"
                android:textSize="24sp"
                android:background="@drawable/gradient_back_btn"
                app:backgroundTint="@null"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            app:cardCornerRadius="30dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginBottom="20dp"

            >
            <Button
                android:id="@+id/fives_cor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/aleo_bold"
                android:textStyle="bold"
                android:textSize="24sp"
                android:background="@drawable/gradient_back_btn"
                app:backgroundTint="@null"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center"
            app:cardCornerRadius="30dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="40dp"
            >
            <Button
                android:id="@+id/restart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/aleo_bold"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="@string/restart"
                android:background="@drawable/gradient_back_btn"
                app:backgroundTint="@null"
                />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>